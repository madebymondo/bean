<div class="code-block {%- if module.filename %} code-block--has-filename {%- endif %} {%- for option in  module.options %} code-block--{{option}} {%- endfor %}" {% if module.id %} id="{{module.id}}"{% endif %}>
    <figure class="code-block__figure">
        {% if module.filename %}
            <figcaption class="code-block__filename">{{module.filename}}</figcaption>
        {% endif %}
        <pre class="code-block__pre"><code class="code-block__pre__code language-{{module.language}}">{{- module.code -}}</code></pre>
    </figure>
</div>
